{
  "name": "Comment_reviewer",
  "version": "2.0",
  "manifest_version": 2,
  "description": "review the comment on http://www.customerservicescoreboard.com and save your time",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "<all_urls>"],
  "background":
   {
    	"scripts": ["jquery.min.js", "jqcloud.min.js", "demo-words.js", "histogram_part.js"],
    	"css": ["jqcloud.min.css"]
   },
   "content_scripts": 
    [
        {
            "scripts": ["jquery.min.js", "jqcloud.min.js", "demo-words.js", "histogram_part.js"],
    		    "css": ["jqcloud.min.css"]
        }
    ]
}
